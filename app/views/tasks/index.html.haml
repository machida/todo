%h1 Listing tasks
.new_task
  = form_for(@task) do |f|
    .field
      %ul
        %li.label= Task
        %li.text_field= f.text_field :name
    .actions
      %ul
        %li.submit= f.submit
.tasks
  %table
    %tr
      %th User ID
      %th Task ID
      %th Name
      %th Status
      %th
      %th
      %th
      %th
    - @tasks.each do |task|
      %tr
        %td= task.user_id
        %td= task.id
        %td= task.name
        %td= task.status
        %td.done= link_to 'Done', action: "done", id: task.id
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete
